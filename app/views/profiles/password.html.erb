<div class="mx-auto max-w-md">
  <div class="mb-6">
    <%= link_to "&larr; Back to Profile".html_safe, profile_path, class: "text-blue-400 hover:text-blue-300" %>
  </div>

  <h1 class="font-bold text-4xl mb-8 text-white">Change Password</h1>

  <div class="bg-gray-900 rounded-lg shadow p-6 border border-gray-800">
    <%= form_with url: update_password_profile_path, method: :patch do |form| %>
      <% if @user.errors.any? %>
        <div class="mb-6 bg-red-500/10 border border-red-500/20 rounded-lg p-4">
          <h3 class="text-sm font-medium text-red-400 mb-2">Please correct the following errors:</h3>
          <ul class="list-disc list-inside text-sm text-red-400">
            <% @user.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= form.label :current_password, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.password_field :current_password, class: "w-full px-4 py-2 border border-gray-700 bg-gray-800 text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true, autocomplete: "current-password" %>
      </div>

      <div class="mb-6">
        <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.password_field "user[password]", class: "w-full px-4 py-2 border border-gray-700 bg-gray-800 text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true, minlength: 12, autocomplete: "new-password" %>
        <p class="text-xs text-gray-500 mt-1">Minimum 12 characters</p>
      </div>

      <div class="mb-6">
        <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.password_field "user[password_confirmation]", class: "w-full px-4 py-2 border border-gray-700 bg-gray-800 text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true, autocomplete: "new-password" %>
      </div>

      <div class="bg-yellow-900/30 border border-yellow-800/50 rounded-lg p-4 mb-6">
        <p class="text-sm text-yellow-400">Changing your password will sign you out of all other sessions.</p>
      </div>

      <div class="flex gap-4">
        <%= form.submit "Change Password", class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition cursor-pointer" %>
        <%= link_to "Cancel", profile_path, class: "px-4 py-2 bg-gray-700 hover:bg-gray-600 text-gray-300 font-medium rounded-lg transition" %>
      </div>
    <% end %>
  </div>
</div>
