<%= form_with model: [:admin, user], class: "contents" do |form| %>
  <% if user.errors.any? %>
    <div class="bg-red-500/10 border border-red-500/20 text-red-400 px-4 py-3 font-medium rounded-lg mt-3">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul class="list-disc list-inside mt-2">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "block text-gray-300 font-medium" %>
    <%= form.text_field :name, required: true, class: "block rounded-lg border border-gray-700 bg-gray-800 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-4 py-3 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :username, class: "block text-gray-300 font-medium" %>
    <%= form.text_field :username, required: true, class: "block rounded-lg border border-gray-700 bg-gray-800 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-4 py-3 mt-2 w-full" %>
    <p class="mt-1 text-sm text-gray-500">Lowercase letters, numbers, and underscores only</p>
  </div>

  <div class="my-5">
    <%= form.label :password, class: "block text-gray-300 font-medium" %>
    <%= form.password_field :password, required: user.new_record?, placeholder: user.persisted? ? "Leave blank to keep current" : "Minimum 8 characters", class: "block rounded-lg border border-gray-700 bg-gray-800 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-4 py-3 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :password_confirmation, "Confirm password", class: "block text-gray-300 font-medium" %>
    <%= form.password_field :password_confirmation, required: user.new_record?, class: "block rounded-lg border border-gray-700 bg-gray-800 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-4 py-3 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :role, class: "block text-gray-300 font-medium" %>
    <%= form.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "block rounded-lg border border-gray-700 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 px-4 py-3 mt-2 w-full" %>
  </div>

  <div class="flex items-center gap-4">
    <%= form.submit class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white cursor-pointer" %>
    <%= link_to "Cancel", admin_users_path, class: "text-gray-400 hover:text-gray-300" %>
  </div>
<% end %>
